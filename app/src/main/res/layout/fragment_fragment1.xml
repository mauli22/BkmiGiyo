<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/spaghetti">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:alpha="0.6"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:text="PILIH MENU MAKANAN"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="#ff000000"
        android:layout_marginBottom="5dp"
        android:alpha="0.5"
        android:textColor="#ffffffff"
        android:id="@+id/pilihtxt"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/menumakan"
        android:layout_below="@+id/pilihtxt"
        android:textAlignment="gravity"
        android:background="@android:drawable/spinner_background">
    </Spinner>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Topping"
        android:textColor="#A9A9A9"
        android:layout_below="@id/menumakan"
        android:paddingLeft="10dp"
        android:id="@+id/topingtxt"
        />
   <Spinner
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/sp_toping"
       android:layout_below="@+id/topingtxt"
       android:background="@android:drawable/spinner_background"
       android:layout_marginTop="5dp"
       android:paddingLeft="10dp"
       >

   </Spinner>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:text="Tingkat Pedas"
        android:textColor="#A9A9A9"
        android:id="@+id/pedastxt"
        android:layout_below="@id/sp_toping"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:id="@+id/tpedas"
        android:layout_below="@id/pedastxt"
        android:entries="@array/tingkatpedas"
        android:background="@android:drawable/spinner_background">
    </Spinner>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:text="tambahan free"
        android:textColor="#A9A9A9"
        android:id="@+id/kettxt"
        android:layout_below="@id/tpedas"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:id="@+id/ketlayout"
        android:layout_below="@id/kettxt">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:id="@+id/sayur"
            android:text="Sayur"
            android:checked="true"
            android:textColor="#fff"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:id="@+id/micin"
            android:text="Micin"
            android:checked="true"
            android:textColor="#fff"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:id="@+id/ayam"
            android:text="Ayam"
            android:checked="true"
            android:textColor="#fff"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:id="@+id/garam"
            android:text="Garam"
            android:checked="true"
            android:textColor="#fff"
            />

    </LinearLayout>
    <Button
        android:id="@+id/send1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Masukkan Keranjang"
        android:textColor="#000"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@android:drawable/bottom_bar"
        android:clickable="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        />
</RelativeLayout>