<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/cardview_default_elevation"
    android:paddingTop="@dimen/cardview_default_elevation"
    android:background="#aaaaaa">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="#e6e6e6"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:padding="2dp"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/cardview_default_elevation"
        android:paddingTop="@dimen/cardview_default_elevation">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="makan"
            android:id="@+id/tempatpesanan"
            android:layout_marginLeft="10dp"
            android:textColor="#ff000000"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tempattoping"
            android:text="toping"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:textColor="#ff000000"
            android:layout_below="@+id/tempatpesanan"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tempatpedas"
            android:text="pedas"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:textColor="#ff000000"
            android:layout_below="@+id/tempattoping"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/tempatketerangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tempatpedas"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:text="ket"
            android:textColor="#ff000000" />

        <TextView
            android:id="@+id/tempatjumlahmakanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/tempatpesanan"
            android:text="(1)"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#ff000000" />
        <Button
            android:id="@+id/delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:background="@drawable/deletesek"
            android:onClick="hapusBaris"
            android:layout_marginRight="10dp"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/tambah"
            android:layout_below="@+id/delete"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/tambahsek"
            android:onClick="tambahJumlah"
            />


    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>

